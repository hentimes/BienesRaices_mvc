extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)


block contenido

    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            spam.font-normal Raices
            p.font-thin.text-2xl La puerta de entrada a tu nuevo hogar.
        h2.text-center.text-2xl.font-extrabold= pagina


        div(class="bg-white shadow py-6 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center hover:opacity-80 hover:bg-pink-50" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}`)
                input(type="hidden" name="_csrf" value= csrfToken) 

            button(id="publicar" class="mt-5 w-full bg-pink-400 hover:bg-pink-500 text-white font-bold rounded-md py-2 cursor-pointer" type="button" ) Publicar Propiedad
                    
block scripts
    script(src="/js/agregarImagen.js")
