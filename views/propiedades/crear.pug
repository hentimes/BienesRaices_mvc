extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            spam.font-normal Raices
            p.font-thin.text-2xl La puerta de entrada a tu nuevo hogar.
        h2.text-center.text-2xl.font-extrabold= pagina

        div(class="bg-white shadow py-6 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8

                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información General
                    p.tect-gray-600 Añade información de la propiedad en venta.

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Título
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Describe tu publicación..." type="text" name="titulo")

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="categoria") Categoria
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")
                                option(value="") - Seleccione -

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="titulo") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")
                                option(value="") - Seleccione -

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitaciones")
                                option(value="") - Seleccione -
                                - var n = 1;
                                    while n < 6
                                        option(value = n) #{n++}

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="estacionamiento")
                                option(value="") - Seleccione -
                                - var n = 1;
                                    while n < 4
                                        option(value = n) #{n++}
                                
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="tiwctulo") WC
                            select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")
                                option(value="") - Seleccione -
                                - var n = 1;
                                    while n < 6
                                        option(value = n)  #{n++}

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")